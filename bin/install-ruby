#!/usr/bin/env sh

RUBY_VERSION="$1"
if [ -z "$RUBY_VERSION" ]; then
  echo "Ruby version is required as the first argument." >&2
  exit 1
fi

function build_ruby() {
  RUBY_CONFIGURE_OPTS="--disable-install-doc" rbenv install "$RUBY_VERSION"
}

echo "Installing Ruby version $RUBY_VERSION..."
brew update
brew upgrade
rustup update
if ! build_ruby; then
  echo "\033[31mError: Failed to install Ruby version $RUBY_VERSION." >&2
  exit 1
fi
rbenv rehash
rbenv global "$RUBY_VERSION"
gem update --system
rbenv versions
