#!/usr/bin/env sh

# Install Homebrew packages
brew update -q
brew install -q git
brew install -q gh
brew install -q lastpass-cli
brew install -q ripgrep
brew install -q --cask alacritty
brew install -q --cask font-caskaydia-mono-nerd-font
brew install -q zellij
brew install -q bat
brew install -q lazygit
brew install -q lazydocker
brew install -q eza
brew install -q fzf
brew install -q zoxide
brew install -q wget

# Add global git configs
git config --global init.defaultBranch main
git config --global pull.rebase false
git config --global status.short true
git config --global status.branch true
git config --global alias.s status
git config --global push.autoSetupRemote true

# Github CLI config
gh alias set merge '!gh pr merge --merge --delete-branch "$@" && git fetch --prune' --clobber >/dev/null
gh alias set prc '!gh pr create -t "$(ruby -e '\''puts `git rev-parse --abbrev-ref HEAD`.tr("-", " ").capitalize'\'' )" -b ""' --clobber >/dev/null

echo "Dev setup complete!"
